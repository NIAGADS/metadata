{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "sample_id": {
            "type": "string"
        },
        "file_name": {
            "type": "string"
        },
        "data_category": {
            "type": "string"
        },
        "file_format": {
            "type": "string"
        },
        "data_type": {
            "type": "string",
            "enum": [
                "raw",
                "processed",
                "image",
                "annotation"
            ]
        },
        "md5sum": {
            "type": "string",
            "format": "md5sum"
        },
        "comment": {
            "type": ["string", "null"]
        }
    },
    "additionalProperties": false,
    "required": [
        "sample_id",
        "file_name",
        "data_category",
        "file_format",
        "data_type",
        "md5sum"
    ]
}